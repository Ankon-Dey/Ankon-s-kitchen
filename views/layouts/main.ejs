<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || 'Cooking Blog - Made with Node.js' %></title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">


  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;600&family=Pacifico&display=swap" rel="stylesheet">

  <!-- Local CSS -->
  <link rel="stylesheet" href="/css/style.css">

  <!-- AOS CSS -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" rel="stylesheet">

<link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet">

<link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet">




  <style>
    body {
      font-family: 'Rubik', sans-serif;
      background-color: #fff8f0;
      color: #333;
      transition: background-color 0.4s, color 0.4s;
    }

    body.dark-mode {
      background-color: #121212;
      color: #e0e0e0;
    }

    header {
      background: linear-gradient(135deg, #EFC82F 0%, #F7D967 50%, #FFEEA8 100%);
      padding: 1rem 2rem;
    }

    .dark-mode header {
      background: linear-gradient(to right, #333, #555);
    }

    .nav-link {
      color: #fff !important;
      font-weight: 600;
      transition: color 0.3s;
    }

    .nav-link:hover {
      color: #333 !important;
      text-decoration: underline;
    }

    .dark-mode .nav-link:hover {
      color: #9ae9ff !important;
    }

    .btn-outline-secondary {
      border-color: #fff;
      color: #fff;
    }
    .btn-dark {
      background: linear-gradient(to right, #D4AF37 0%, #EFC82F 50%, #F9E076 100%);
      border: none;
      color: white;
      transition: background-color 0.3s, color 0.3s;}
    
    .btn-outline-secondary:hover {
      background-color: #ff4b2b;
      color: white;
      border-color: #ff4b2b;
    }

    .featured {
      background: #ffe3dc;
      padding: 1rem;
      border-radius: 10px;
      margin-bottom: 1.5rem;
      animation: fadeIn 1s ease;
    }

    .dark-mode .featured {
      background: #1e1e1e;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    footer {
      background-color: #fcefee;
      text-align: center;
      font-size: 0.9rem;
      color: #777;
      transition: background-color 0.4s;
    }

    .dark-mode footer {
      background-color: #222;
      color: #aaa;
    }
  </style>
</head>

<body>
<div class="container-xxl shadow-sm p-0">
  <!-- Header -->
  <header class="d-flex flex-wrap align-items-center justify-content-between border-bottom">
    <a href="/" class="d-flex align-items-center mb-2 mb-md-0 text-dark text-decoration-none">
      <img src="/img/logo.jpg" width="150" height="100" alt="Cooking Blog Logo">
    </a>

    <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
      <li><a href="/" class="nav-link px-3">Home</a></li>
      <li><a href="/about" class="nav-link px-3">About</a></li>
      <li><a href="/submit-recipe" class="nav-link px-3">Submit</a></li>
      <li><a href="/contact" class="nav-link px-3">Contact</a></li>
      <li><a href="/login" class="nav-link px-3"><u>Login</u></a></li>
    </ul>

    <div class="d-flex align-items-center">
      <form method="POST" action="/search" class="d-flex me-3">
        <input type="search" name="searchTerm" class="form-control me-2" placeholder="Search..." aria-label="Search">
        <button type="submit" class="btn btn-outline-secondary">Search</button>
      </form>
      <button id="darkToggle" class="btn btn-dark" title="Toggle dark mode"><i class="bi bi-moon-stars"></i></button>
    </div>
  </header>
  <!-- Main Content -->
  <main class="p-4">
    <%- body %>
  </main>

  <!-- Footer -->
  <footer class="py-4 mt-4">
    <p class="mb-0">Made with ❤️ by <strong>Ankon</strong> | <%= new Date().getFullYear() %></p>
  </footer>
<footer class="text-sm text-muted-foreground text-center mt-12">
  <p>
    &copy; 2025 Ankon's Kitchen | 
    <a href="/privacy-policy" class="text-blue-500 hover:underline">Privacy Policy</a> | 
    <a href="/terms-of-use" class="text-blue-500 hover:underline">Terms of Use</a>
  </p>
</footer>
<a href="/terms-of-use.html" class="text-blue-500 hover:underline">Terms of Use</a>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
<script src="/public/js/script.js"></script>
<script>
  const toggle = document.getElementById('darkToggle');
  toggle.addEventListener('click', () => {
    document.body.classList.toggle('dark-mode');
  });
</script>

<!-- AOS JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
<script>
  AOS.init({ once: true, duration: 800 });
</script>

<script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
<script>
  AOS.init();
</script>

<script src="https://unpkg.com/lucide@latest"></script>
<script>
  lucide.createIcons();
</script>

<script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
<script>
  AOS.init({
    once: true,
    duration: 1000,
  });
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


</body>
</html>
