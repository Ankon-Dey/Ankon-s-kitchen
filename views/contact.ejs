                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 rounded-md border border-gray-300 dark:border-gray-600 bg-transparent focus:outline-none focus:ring-2 focus:ring-primary/30 transition-all"
                placeholder="your@email.com"
              />
            </div>

            <div>
              <label for="message" class="block text-sm font-semibold text-muted-foreground mb-1">Message</label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-3 rounded-md border border-gray-300 dark:border-gray-600 bg-transparent focus:outline-none focus:ring-2 focus:ring-primary/30 resize-none transition-all"
